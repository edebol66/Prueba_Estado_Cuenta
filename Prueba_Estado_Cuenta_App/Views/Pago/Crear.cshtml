@model Prueba_Estado_Cuenta_App.Models.ViewModels.PagoVM;

<div class="container">
    <div class="row">
        <div class="col-12"></div>
        <div class="col-12"></div>
        <div class="col-4"></div>
        <div class="col-4 text-center" style="padding-top:5%;">
            <h4>Registro de pago</h4>
        </div>
        <div class="col-4"></div>
        <div class="col-12"></div>
        <div class="col-12"></div>
        <div class="col-4"></div>
        <div class="col-4" style="padding-top:2%;">
            <form asp-action="Crear">
                <input type="hidden" asp-for="IdCliente" />
                <div class="form-group">
                    <label asp-for="Monto" class="control-label">Ingrese el monto del pago a realizar</label>
                    <input asp-for="Monto" class="form-control" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaPago" class="control-label">Registre la fecha del pago</label>
                    <input asp-for="FechaPago" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-danger" />
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>

