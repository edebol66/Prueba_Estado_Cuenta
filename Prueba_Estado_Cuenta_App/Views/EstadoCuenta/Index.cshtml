@model Prueba_Estado_Cuenta_App.Models.EstadoCuentaVM

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="~/css/EstadoCuenta.css" />
    </head>
    <body>
        @if (Model.Cliente?.Nombre != null)
        {
            <h5>Bienvenido @Model.Cliente!.Nombre</h5>
        }
        else
        {
            <h5>Nombre no disponible</h5>
        }

        <div class="container">
            <div class="info-column card">
                <div class="card" style="width: 15rem;">
                   <div class="card-header">General</div>
                  <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-danger">N° Tarjeta</h6>
                    <p class="card-text text-rigth">@Model.TarjetaLimites!.numeroTarjeta</p>
                    <h6 class="card-subtitle mb-2 text-danger">Límite crédito</h6>
                    <p class="card-text">$@Model.TarjetaLimites!.limite</p>
                    <h6 class="card-subtitle mb-2 text-danger">Saldo disponible</h6>
                    <p class="card-text">$@Model.Saldo!.saldoDisponible</p>
                    <h6 class="card-subtitle mb-2 text-danger">Saldo actual</h6>
                    <p class="card-text">$@Model.Saldo!.saldoActual</p>
                  </div>
                </div>
            </div>

            <div class="info-column card">
                <div class="card" style="width: 15rem;">
                   <div class="card-header">Montos y Pagos</div>
                  <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-danger">Interes Bonificable</h6>
                    <p class="card-text text-rigth">$@Model.Saldo.interesBonificable</p>
                    <h6 class="card-subtitle mb-2 text-danger">Cuota mínima</h6>
                    <p class="card-text text-rigth">$@Model.Saldo.cuotaMinima</p>
                    <h6 class="card-subtitle mb-2 text-danger">Contado con intereses</h6>
                    <p class="card-text text-rigth">$@Model.Saldo.contadoConInteres</p>
                    <h6 class="card-subtitle mb-2 text-danger">Total pagar contado</h6>
                    <p class="card-text text-rigth">$@Model.Saldo.totalPagar</p>
                  </div>
                </div>
            </div>

            <div class="table-column">
                <div class="row">
                    <div class="col-4">
                        <h6>Detalle compras</h6>
                    </div>
                    <div class="col-3"></div>
                    <div class="col-5">
                        <h6>Total Compras (@Model.inicialesFecha): $@Model.Saldo!.montoTotal</h6>
                    </div>
                </div>
                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>Descripción de compra</th>
                                <th>Monto</th>
                                <th>Fecha de compra</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var compra in Model.Compra!)
                            {
                                <tr>
                                    <td>@compra.Descripcion</td>
                                    <td>$@compra.Monto</td>
                                    <td>@compra.FechaCompra</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>


